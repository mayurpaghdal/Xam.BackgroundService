<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata minClientVersion="2.8.1">
        <id>Xam.BackgroundService</id>
        <version>1.0.5465</version>
        <title>A plugin library to simplify Backgrounding in Xamarin.Forms. A Fork from MatchaBackgroundService</title>
        <authors>Mayur Paghdal</authors>
        <owners>Mayur Paghdal</owners>
        <licenseUrl>https://github.com/winstongubantes/MatchaBackgroundService/blob/master/LICENSE</licenseUrl>
        <projectUrl>https://github.com/mayurpaghdal/Xam.BackgroundService</projectUrl>
        <iconUrl>https://github.com/winstongubantes/MatchaBackgroundService/blob/master/images/icon.png</iconUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            Ever wonder how facebook and twitter process there background to fetch a new content? It is not hard but you have to deal with each platform functionality, It is not generic and simple.
        </description>
        <releaseNotes>
            See: https://github.com/winstongubantes/MatchaBackgroundService/blob/master/CHANGELOG.md
        </releaseNotes>
        <summary>A plugin library to simplify Backgrounding in Xamarin.Forms.</summary>
        <tags>xamarin, android, ios, backgroundservice</tags>
        <dependencies>
            <group targetFramework="netstandard2.0">
                <dependency id="System.Reactive" version="6.0.0" exclude="Build,Analyzers" />
            </group>
            <group targetFramework="MonoAndroid10">
                <dependency id="System.Reactive" version="6.0.0" exclude="Build,Analyzers" />
            </group>
            <group targetFramework="Xamarin.iOS10">
                <dependency id="System.Reactive" version="6.0.0" exclude="Build,Analyzers" />
            </group>
            <group targetFramework="uap">
                <dependency id="System.Reactive" version="6.0.0" exclude="Build,Analyzers" />
            </group>
        </dependencies>
    </metadata>
    <files> 
        <!--Core-->
        <file src="..\src\Xam.BackgroundService\bin\Release\netstandard2.0\Xam.BackgroundService.*" target="lib\netstandard2.0" />
        <!--Xamarin.Android-->
        <file src="..\src\Xam.BackgroundService.Droid\bin\Release\Xam.BackgroundService.*" target="lib\MonoAndroid10" />
        <!--Xamarin.iOS Unified-->
        <file src="..\src\Xam.BackgroundService.iOS\bin\Release\Xam.BackgroundService.*" target="lib\Xamarin.iOS10" />
        <!--UWP-->
        <file src="..\src\Xam.BackgroundService.UWP\bin\Release\Xam.BackgroundService.*" target="lib\UAP10" />
    </files>
</package>
